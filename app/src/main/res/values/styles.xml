<?xml version="1.0" encoding="utf-8"?>
<resources>

    /**
    * Base applications themes  -->
    */

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        //Customize your theme here. -->

        <item name="colorOnPrimary">@color/design_default_color_primary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/design_default_color_primary_dark</item>

    </style>

    <style name="SplashTheme" parent= "Theme.AppCompat.Light.NoActionBar">

        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/logo4</item>

    </style>

    <style name="LoginTheme" parent="FirebaseUI">

        <item name="colorOnPrimary">@color/design_default_color_primary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/design_default_color_primary_dark</item>

        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:cacheColorHint">@color/white</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/logo4</item>
        <item name="android:windowFullscreen">true</item>

    </style>



</resources>